<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/bitmaplayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="0.2"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mipmap1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.33"
            android:visibility="invisible"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/mipmap2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.33"
            android:visibility="invisible"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/mipmap3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0.33"
            android:visibility="invisible"
            app:srcCompat="@mipmap/ic_launcher" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cancellayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="vertical">

        <GridLayout
            android:id="@+id/cancel1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.15">

            <ImageButton
                android:id="@+id/cancel_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@android:drawable/ic_delete" />

        </GridLayout>

        <GridLayout
            android:id="@+id/cancel2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            >

            <ImageButton
                android:id="@+id/cancel_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@android:drawable/ic_delete" />
        </GridLayout>

        <GridLayout
            android:id="@+id/cancel3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            >

            <ImageButton
                android:id="@+id/cancel_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@android:drawable/ic_delete" />
        </GridLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/mypreviewlayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.7">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/buttonlayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="vertical"
        android:weightSum="1">

        <Button
            android:id="@+id/button_shoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="拍摄"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="上传"
            android:textSize="24sp" />


    </LinearLayout>

</LinearLayout>